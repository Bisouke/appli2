<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAccueil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kalam_regular"
                android:text="CarStat"
                android:textSize="65sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15sp"
                app:srcCompat="@drawable/gas_pump" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="Suivez votre consommation"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_ajout_carburant"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#1c41b0"
                android:text="Ajouter un plein"
                android:textSize="18dp"
                app:icon="@drawable/gas_station"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button_historique"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2251dd"
                android:text="Mon historique"
                android:textSize="18dp"
                app:icon="@drawable/history"
                app:iconSize="24dp" />

            <Button
                android:id="@+id/button_statistiques"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4f74e3"
                android:text="Statistiques"
                android:textSize="18dp"
                app:icon="@drawable/graph"
                app:iconSize="22dp" />

            <Button
                android:id="@+id/button_vehicules"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#7b97ea"
                android:text="Mes vÃ©hicules"
                android:textSize="18dp"
                app:icon="@drawable/car"
                app:iconSize="32dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="version 0.1"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>