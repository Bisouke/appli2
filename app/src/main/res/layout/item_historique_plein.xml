<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/truc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/itemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="false"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItemHist_ligne1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.2L de SP95E10"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewItemHist_ligne2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.71 €/L   03-04-2025"
                android:textColor="#646464"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewItemHist_temps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="il y a 0 jours"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewItemHist_prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="30 €"
            android:textSize="18sp" />

        <View
            android:id="@+id/textViewItemHist_color"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:background="#C92525" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>